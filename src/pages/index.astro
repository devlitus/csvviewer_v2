---
import AppLayout from '../layouts/AppLayout.astro';
import Sidebar from '../components/layout/Sidebar.astro';
import Header from '../components/layout/Header.astro';
import MainContent from '../components/layout/MainContent.astro';
import UploadZone from '../components/upload/UploadZone.astro';
import RecentFiles from '../components/files/RecentFiles.astro';
---

<AppLayout title="DataFlow - Upload">
  <Sidebar currentPage="upload" />
  <div class="flex-1 flex flex-col bg-background-dark">
    <Header currentPage="Upload" breadcrumbItems={[{ label: 'Upload' }]} />
    <MainContent>
      <div class="flex-1 overflow-y-auto px-8 py-8">
        <div class="max-w-250 mx-auto flex flex-col gap-8">
          <!-- Título y descripción -->
          <div class="flex flex-col gap-2">
            <h1 class="text-text-off-white text-3xl font-black tracking-tight">Upload & Process</h1>
            <p class="text-text-light-gray text-base max-w-2xl">
              Get started by importing your data. Our powerful engine will parse, validate, and prepare your CSV for visualization instantly.
            </p>
          </div>

          <UploadZone />
          <RecentFiles />
        </div>
      </div>
    </MainContent>
  </div>
</AppLayout>
