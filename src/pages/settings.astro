---
import AppLayout from "../layouts/AppLayout.astro";
import Sidebar from "../components/layout/Sidebar.astro";

// Settings Page
---

<AppLayout title="DataFlow - Settings">
  <Sidebar currentPage="settings" />
  <main
    class="flex-1 flex flex-col h-full bg-surface-dark overflow-hidden relative rounded-tl-2xl shadow-2xl border-l border-border-dark my-2 mr-2"
  >
    <!-- Header -->
    <header
      class="flex-shrink-0 h-16 px-8 flex items-center justify-between border-b border-border-dark/50"
    >
      <div class="flex items-center gap-2 text-text-light-gray">
        <span class="material-symbols-outlined" style="font-size: 20px;"
          >home</span
        >
        <span class="text-sm">/</span>
        <span class="text-sm font-medium text-text-off-white">Settings</span>
      </div>
      <div class="w-full max-w-sm relative group">
        <span
          class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-light-gray group-focus-within:text-vibrant-blue transition-colors"
          style="font-size: 20px;">search</span
        >
        <input
          class="w-full bg-background-dark border border-border-dark/50 rounded-lg py-2 pl-10 pr-4 text-sm focus:ring-2 focus:ring-vibrant-blue/20 focus:border-vibrant-blue text-text-off-white placeholder-text-light-gray transition-all focus:outline-none"
          placeholder="Search settings..."
          type="text"
        />
      </div>
    </header>

    <!-- Content -->
    <div class="flex-1 overflow-y-auto px-8 py-8">
      <div class="max-w-4xl mx-auto flex flex-col gap-8 pb-10">
        <div class="flex flex-col gap-2">
          <h1 class="text-text-off-white text-3xl font-black tracking-tight">
            Settings
          </h1>
          <p class="text-text-light-gray text-base max-w-2xl">
            Manage your account preferences, security settings, and data
            configurations.
          </p>
        </div>

        <!-- Profile Settings -->
        <section
          class="bg-surface-card border border-border-dark rounded-xl p-6 shadow-sm"
        >
          <div class="flex items-center justify-between mb-6">
            <h2
              class="text-xl font-bold text-text-off-white flex items-center gap-2"
            >
              <span class="material-symbols-outlined text-vibrant-blue"
                >person</span
              >
              Profile Settings
            </h2>
          </div>
          <div class="flex flex-col md:flex-row items-start gap-8">
            <div class="flex-shrink-0 relative group cursor-pointer">
              <div
                class="size-24 rounded-full bg-cover bg-center border-4 border-background-dark shadow-xl"
                style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuDau-wxOXXfeHNTfZ64F3nIQSAB8dcHtOJ0ExzSgcORWeXLeuU4eltDOpSWzYFKOrDpv06CBzojL9nm44HCJHoVylrmAdL52_E2jnTfGlLhR9CBBtv34sqGobAy_UcsxWHEG3Cs3zS2f0nJEIYdvxuEUyBkLlaXvMfpMj4FzNsqHmSuJ1rY5AGlVHomQ97XnC9umxGHSKZeDle62EbUMQKGO2QjzsgTP1-VQUKGUaHR98hqTwIdjyVFqmI7O7a7ObFC-it7qjpqCHLY");'
              >
              </div>
              <div
                class="absolute inset-0 bg-black/60 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-200"
              >
                <span class="material-symbols-outlined text-white"
                  >photo_camera</span
                >
              </div>
            </div>
            <div class="flex-1 w-full grid gap-5">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div class="space-y-1.5">
                  <label class="block text-sm font-medium text-text-light-gray"
                    >Full Name</label
                  >
                  <input
                    class="w-full bg-background-dark border border-border-dark rounded-lg px-4 py-2.5 text-text-off-white focus:ring-1 focus:ring-vibrant-blue focus:border-vibrant-blue outline-none transition-all placeholder-text-light-gray/50"
                    type="text"
                    value="Alex Morgan"
                  />
                </div>
                <div class="space-y-1.5">
                  <label class="block text-sm font-medium text-text-light-gray"
                    >Email Address</label
                  >
                  <input
                    class="w-full bg-background-dark border border-border-dark rounded-lg px-4 py-2.5 text-text-off-white focus:ring-1 focus:ring-vibrant-blue focus:border-vibrant-blue outline-none transition-all placeholder-text-light-gray/50"
                    type="email"
                    value="alex@dataflow.io"
                  />
                </div>
              </div>
              <div class="flex justify-end pt-2">
                <button
                  class="px-5 py-2.5 bg-vibrant-blue hover:bg-primary-hover text-white rounded-lg text-sm font-semibold transition-all shadow-lg shadow-vibrant-blue/10 cursor-pointer"
                  >Save Changes</button
                >
              </div>
            </div>
          </div>
        </section>

        <!-- Preferences -->
        <section
          class="bg-surface-card border border-border-dark rounded-xl p-6 shadow-sm"
        >
          <h2
            class="text-xl font-bold text-text-off-white flex items-center gap-2 mb-6"
          >
            <span class="material-symbols-outlined text-vibrant-blue">tune</span
            >
            Preferences
          </h2>
          <div class="grid gap-6">
            <div>
              <label class="block text-sm font-medium text-text-light-gray mb-3"
                >Interface Theme</label
              >
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                <button
                  class="relative border-2 border-vibrant-blue bg-vibrant-blue/10 rounded-lg p-3 flex items-center justify-center gap-2 text-text-off-white shadow-inner cursor-pointer"
                >
                  <span
                    class="material-symbols-outlined filled text-vibrant-blue"
                    >dark_mode</span
                  >
                  <span class="text-sm font-medium">Dark Mode</span>
                  <span
                    class="absolute -top-2 -right-2 bg-vibrant-blue text-white text-[10px] px-1.5 py-0.5 rounded-full font-bold"
                    >ACTIVE</span
                  >
                </button>
                <button
                  class="border border-border-dark bg-background-dark hover:bg-white/5 rounded-lg p-3 flex items-center justify-center gap-2 text-text-light-gray transition-colors cursor-pointer"
                >
                  <span class="material-symbols-outlined">light_mode</span>
                  <span class="text-sm font-medium">Light Mode</span>
                </button>
                <button
                  class="border border-border-dark bg-background-dark hover:bg-white/5 rounded-lg p-3 flex items-center justify-center gap-2 text-text-light-gray transition-colors cursor-pointer"
                >
                  <span class="material-symbols-outlined">brightness_auto</span>
                  <span class="text-sm font-medium">System</span>
                </button>
              </div>
            </div>
            <div class="max-w-md">
              <label
                class="block text-sm font-medium text-text-light-gray mb-1.5"
                >Language</label
              >
              <div class="relative">
                <span
                  class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-light-gray pointer-events-none"
                  style="font-size: 20px;">language</span
                >
                <select
                  class="w-full bg-background-dark border border-border-dark rounded-lg pl-10 pr-4 py-2.5 text-text-off-white focus:ring-1 focus:ring-vibrant-blue focus:border-vibrant-blue outline-none appearance-none cursor-pointer"
                >
                  <option>English (United States)</option>
                  <option>Spanish (Español)</option>
                  <option>French (Français)</option>
                  <option>German (Deutsch)</option>
                </select>
                <span
                  class="material-symbols-outlined absolute right-3 top-1/2 -translate-y-1/2 text-text-light-gray pointer-events-none"
                  style="font-size: 20px;">expand_more</span
                >
              </div>
            </div>
          </div>
        </section>

        <!-- Security -->
        <section
          class="bg-surface-card border border-border-dark rounded-xl p-6 shadow-sm"
        >
          <h2
            class="text-xl font-bold text-text-off-white flex items-center gap-2 mb-6"
          >
            <span class="material-symbols-outlined text-vibrant-blue"
              >security</span
            >
            Security
          </h2>
          <div class="space-y-6">
            <div
              class="flex items-center justify-between pb-6 border-b border-border-dark/50"
            >
              <div>
                <h3 class="text-base font-semibold text-text-off-white">
                  Password
                </h3>
                <p class="text-sm text-text-light-gray mt-1">
                  Last changed 3 months ago
                </p>
              </div>
              <button
                class="px-4 py-2 border border-border-dark hover:bg-white/5 hover:border-text-light-gray text-text-off-white rounded-lg text-sm font-medium transition-colors cursor-pointer"
                >Change Password</button
              >
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-base font-semibold text-text-off-white">
                  Two-Factor Authentication
                </h3>
                <p class="text-sm text-text-light-gray mt-1">
                  Secure your account with 2FA
                </p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input class="sr-only peer" type="checkbox" value="" />
                <div
                  class="w-11 h-6 bg-border-dark peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-text-light-gray after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-vibrant-blue peer-checked:after:bg-white"
                >
                </div>
              </label>
            </div>
          </div>
        </section>

        <!-- Data Management -->
        <section
          class="bg-surface-card border border-border-dark rounded-xl p-6 shadow-sm"
        >
          <h2
            class="text-xl font-bold text-text-off-white flex items-center gap-2 mb-6"
          >
            <span class="material-symbols-outlined text-vibrant-blue"
              >database</span
            >
            Data Management
          </h2>
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-base font-semibold text-text-off-white">
                  Default Export Format
                </h3>
                <p class="text-sm text-text-light-gray mt-1">
                  Preferred format for data downloads
                </p>
              </div>
              <div class="relative w-48">
                <select
                  class="w-full bg-background-dark border border-border-dark rounded-lg px-4 py-2 text-text-off-white text-sm focus:ring-1 focus:ring-vibrant-blue focus:border-vibrant-blue outline-none appearance-none cursor-pointer"
                >
                  <option>CSV (.csv)</option>
                  <option>JSON (.json)</option>
                  <option>Excel (.xlsx)</option>
                </select>
                <span
                  class="material-symbols-outlined absolute right-2 top-1/2 -translate-y-1/2 text-text-light-gray pointer-events-none"
                  style="font-size: 20px;">expand_more</span
                >
              </div>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-base font-semibold text-text-off-white">
                  Auto-save Projects
                </h3>
                <p class="text-sm text-text-light-gray mt-1">
                  Save changes every 5 minutes
                </p>
              </div>
              <label class="relative inline-flex items-center cursor-pointer">
                <input
                  checked=""
                  class="sr-only peer"
                  type="checkbox"
                  value=""
                />
                <div
                  class="w-11 h-6 bg-border-dark peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-text-light-gray after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-vibrant-blue peer-checked:after:bg-white"
                >
                </div>
              </label>
            </div>
            <div class="pt-6 border-t border-border-dark/50">
              <div
                class="flex items-center justify-between p-4 border border-red-500/20 bg-red-500/5 rounded-lg"
              >
                <div>
                  <h3 class="text-base font-bold text-red-500">
                    Delete All Data
                  </h3>
                  <p class="text-sm text-text-light-gray mt-1">
                    Permanently remove all projects and files. This cannot be
                    undone.
                  </p>
                </div>
                <button
                  class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg text-sm font-semibold transition-colors shadow-lg shadow-red-500/20 cursor-pointer"
                  >Delete all data</button
                >
              </div>
            </div>
          </div>
        </section>

        <div class="h-8"></div>
      </div>
    </div>
  </main>
</AppLayout>

<style>
  /* Additional styles if needed */
  .toggle-checkbox:checked {
    right: 0;
    border-color: var(--color-vibrant-blue);
  }
  .toggle-checkbox:checked + .toggle-label {
    background-color: var(--color-vibrant-blue);
  }
</style>
