---
interface Props {
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md' | 'lg';
  fullWidth?: boolean;
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  fullWidth = false,
  class: className = ''
} = Astro.props as Props;

const sizeClass = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-6 py-3 text-lg',
};

const variantClass = {
  primary: 'bg-primary hover:bg-primary-hover text-white',
  secondary: 'bg-surface-card hover:bg-border-dark text-text-off-white border border-border-dark',
};

const baseClass = 'rounded-lg font-medium transition-all duration-200 active:scale-95 shadow-md hover:shadow-lg';
const widthClass = fullWidth ? 'w-full' : '';
---

<button 
  class={`${baseClass} ${sizeClass[size]} ${variantClass[variant]} ${widthClass} ${className}`}
>
  <slot />
</button>

<style>
  button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>
