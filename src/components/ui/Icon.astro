---
interface Props {
  name: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  filled?: boolean;
  class?: string;
}

const { name, size = 'md', filled = false, class: className } = Astro.props as Props;

const sizeMap = {
  sm: '20px',
  md: '24px',
  lg: '32px',
  xl: '40px',
};

const sizeClass = {
  sm: 'w-5 h-5',
  md: 'w-6 h-6',
  lg: 'w-8 h-8',
  xl: 'w-10 h-10',
};
---

<span
  class="material-symbols-outlined"
  style={{
    fontSize: sizeMap[size],
    fontVariationSettings: filled ? '"FILL" 1' : '"FILL" 0',
  }}
>
  {name}
</span>

<style>
  .material-symbols-outlined {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    user-select: none;
  }
</style>
