---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  class?: string;
}

const { items, class: className = '' } = Astro.props as Props;
---

<nav class={`flex items-center gap-2 ${className}`}>
  <a href="/" class="flex items-center gap-1 text-text-light-gray hover:text-text-off-white transition-colors">
    <span class="material-symbols-outlined w-5 h-5" style="font-size: 20px;">home</span>
  </a>
  
  {items.map((item, index) => (
    <>
      <span class="text-text-light-gray">/</span>
      {item.href ? (
        <a href={item.href} class="text-text-light-gray hover:text-text-off-white transition-colors">
          {item.label}
        </a>
      ) : (
        <span class="text-text-off-white">{item.label}</span>
      )}
    </>
  ))}
</nav>

<style>
  nav {
    font-size: 0.875rem;
  }
</style>
