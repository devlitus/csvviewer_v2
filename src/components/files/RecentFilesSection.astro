---
import RecentFileCard from "./RecentFileCard.astro";

const recentFiles = [
  {
    filename: "sales_data_q3.csv",
    size: "2.4MB",
    date: "2 hours ago",
    icon: "table_view",
    iconColorClass: "bg-green-500/10 text-green-400",
    status: "Processed",
    statusColorClass: "text-green-400",
    statusIcon: "check_circle",
  },
  {
    filename: "inventory_list.csv",
    size: "840KB",
    date: "Yesterday",
    icon: "inventory_2",
    iconColorClass: "bg-green-500/10 text-green-400",
    status: "Processed",
    statusColorClass: "text-green-400",
    statusIcon: "check_circle",
  },
  {
    filename: "client_contacts.csv",
    size: "1.2MB",
    date: "Oct 24, 2023",
    icon: "contacts",
    iconColorClass: "bg-orange-500/10 text-orange-400",
    status: "Mapping Needed",
    statusColorClass: "text-orange-400",
    statusIcon: "warning",
  },
];
---

<section class="space-y-4">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <h2 class="text-lg font-semibold text-text-off-white">Recent Files</h2>
    <a href="/files" class="text-vibrant-blue hover:text-primary text-sm font-medium transition-colors">
      View all â†’
    </a>
  </div>

  <!-- Grid de tarjetas -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {recentFiles.map((file) => (
      <RecentFileCard
        filename={file.filename}
        size={file.size}
        date={file.date}
        icon={file.icon}
        iconColorClass={file.iconColorClass}
        status={file.status}
        statusColorClass={file.statusColorClass}
        statusIcon={file.statusIcon}
      />
    ))}
  </div>
</section>
