---
interface Props {
  status: "processed" | "mapping-needed" | "error";
}

const { status } = Astro.props as Props;

const statusMap = {
  processed: {
    label: "Processed",
    bgClass: "bg-green-500/10",
    textClass: "text-green-400",
    borderClass: "border-green-500/20",
  },
  "mapping-needed": {
    label: "Mapping Needed",
    bgClass: "bg-orange-500/10",
    textClass: "text-orange-400",
    borderClass: "border-orange-500/20",
  },
  error: {
    label: "Error",
    bgClass: "bg-red-500/10",
    textClass: "text-red-400",
    borderClass: "border-red-500/20",
  },
};

const config = statusMap[status];
---

<span class={`inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border ${config.bgClass} ${config.textClass} ${config.borderClass}`}>
  <span class={`w-1.5 h-1.5 rounded-full ${config.textClass.replace("text-", "bg-")}`}></span>
  {config.label}
</span>
