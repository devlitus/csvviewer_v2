---
import CategoryBadge from "./CategoryBadge.astro";

interface Props {
  rowData: Record<string, string | number>;
  rowIndex: number;
}

const { rowData, rowIndex } = Astro.props as Props;

// Determine row background based on zebra striping
const bgClass = rowIndex % 2 === 0 ? "bg-background-dark" : "bg-surface-card/20";
---

<tr class={`${bgClass} hover:bg-surface-card/40 transition-colors border-b border-border-dark/30 group`}>
  <!-- ID -->
  <td class="px-6 py-3.5 text-sm font-mono text-text-light-gray">
    {rowData.id}
  </td>

  <!-- Date -->
  <td class="px-6 py-3.5 text-sm text-text-off-white">
    {rowData.date}
  </td>

  <!-- Product -->
  <td class="px-6 py-3.5 text-sm font-medium text-white">
    {rowData.product}
  </td>

  <!-- Category -->
  <td class="px-6 py-3.5 text-sm">
    <CategoryBadge category={rowData.category as string} />
  </td>

  <!-- Quantity -->
  <td class="px-6 py-3.5 text-sm font-mono text-right text-text-off-white">
    {rowData.quantity}
  </td>

  <!-- Total Revenue -->
  <td class="px-6 py-3.5 text-sm font-mono text-right font-medium text-text-off-white">
    {rowData.revenue}
  </td>

  <!-- Edit button -->
  <td class="px-6 py-3.5 text-sm text-right">
    <button
      class="p-1 rounded opacity-0 group-hover:opacity-100 hover:bg-white/10 transition-all"
      aria-label="Edit row"
    >
      <span class="material-symbols-outlined text-base">edit</span>
    </button>
  </td>
</tr>
