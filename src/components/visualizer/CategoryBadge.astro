---
interface Props {
  category: string;
}

const { category } = Astro.props as Props;

function getBadgeClasses(cat: string): string {
  const baseClasses = "inline-flex items-center px-2 py-0.5 rounded text-xs font-medium border";

  switch (cat.toLowerCase()) {
    case "electronics":
      return `${baseClasses} bg-blue-500/10 text-blue-400 border-blue-500/20`;
    case "furniture":
      return `${baseClasses} bg-orange-500/10 text-orange-400 border-orange-500/20`;
    case "accessories":
      return `${baseClasses} bg-purple-500/10 text-purple-400 border-purple-500/20`;
    default:
      return `${baseClasses} bg-gray-500/10 text-gray-400 border-gray-500/20`;
  }
}
---

<span class={getBadgeClasses(category)}>
  {category}
</span>
