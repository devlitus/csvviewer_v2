---
interface Props {
  category: string;
}

const { category } = Astro.props;

// Esquema de colores por categor√≠a
const categoryStyles: Record<string, string> = {
  'Electronics': 'bg-blue-500/10 text-blue-400 border-blue-500/20',
  'Furniture': 'bg-orange-500/10 text-orange-400 border-orange-500/20',
  'Accessories': 'bg-purple-500/10 text-purple-400 border-purple-500/20',
};

const styles = categoryStyles[category] || 'bg-gray-500/10 text-gray-400 border-gray-500/20';
---

<span class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-medium border ${styles}`}>
  {category}
</span>
