---
interface Props {
  id: string;
  checked?: boolean;
  disabled?: boolean;
}

const { id, checked = false, disabled = false } = Astro.props as Props;
---

<label class="relative inline-flex items-center cursor-pointer">
  <input
    id={id}
    type="checkbox"
    class="sr-only peer"
    checked={checked}
    disabled={disabled}
  />
  <!-- Toggle switch pseudo-element styling via peer -->
  <div
    class:list={[
      "w-11 h-6 bg-border-dark rounded-full peer peer-disabled:opacity-50 peer-disabled:cursor-not-allowed",
      "peer-checked:bg-vibrant-blue",
      'after:content-[""] after:absolute after:top-0.5 after:start-0.5',
      "after:bg-text-light-gray after:border after:border-gray-300 after:rounded-full after:h-5 after:w-5",
      "after:transition-all after:duration-200",
      "peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full",
      "peer-checked:after:bg-white",
    ]}
  >
  </div>
</label>
