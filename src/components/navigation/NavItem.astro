---
interface Props {
  href: string;
  icon: string;
  label: string;
  active?: boolean;
  filled?: boolean;
}

const { href, icon, label, active = false, filled = false } = Astro.props as Props;
---

<a
  href={href}
  class={`flex items-center gap-3 px-4 py-2.5 rounded-lg transition-all font-medium ${
    active
      ? "bg-vibrant-blue/10 text-vibrant-blue font-semibold"
      : "text-text-light-gray hover:bg-white/5 hover:text-text-off-white"
  }`}
>
  <span class="material-symbols-outlined text-xl" style={filled ? "font-variation-settings: 'FILL' 1;" : ""}>
    {icon}
  </span>
  <span>{label}</span>
</a>
