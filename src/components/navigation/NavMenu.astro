---
import NavItem from './NavItem.astro';

interface Props {
  currentPage?: string;
}

const { currentPage = 'upload' } = Astro.props as Props;

const navItems = [
  { icon: 'cloud_upload', label: 'Upload', href: '/', id: 'upload' },
  { icon: 'folder_open', label: 'My Files', href: '/files', id: 'files' },
  { icon: 'bar_chart', label: 'Visualizer', href: '/visualizer', id: 'visualizer' },
  { icon: 'settings', label: 'Settings', href: '/settings', id: 'settings' },
];
---

<nav class="flex flex-col gap-2">
  {navItems.map(item => (
    <NavItem
      href={item.href}
      icon={item.icon}
      label={item.label}
      isActive={currentPage === item.id}
    />
  ))}
</nav>
